<!-- Content for the Edit page -->
<div class="container">
    <div class="row">
      <div class="offset-md-3 col-md-6">
        <h1><%= title %></h1>
  
        <form class="form" method="POST">
          <div class="form-group">
            <label for="nameTextField">Contact Name</label>
            <input
              type="text"
              class="form-control"
              id="nameTextField"
              placeholder="Enter the Contact Name"
              name="contactName"
              value="<%= contact.contactName %>"
              required
            />
          </div>
  
          <div class="form-group">
            <label for="contactNumberTextField">Contact Number</label>
            <input
              type="text"
              class="form-control"
              id="contactNumberTextField"
              placeholder="Enter the Contact Number"
              name="contactNumber"
              value="<%= contact.contactNumber %>"
              required
            />
          </div>
  
          <div class="form-group">
            <label for="emailAddressTextField">Email Address</label>
            <input
              type="text"
              class="form-control"
              id="emailAddressTextField"
              placeholder="Enter the email address"
              name="emailAddress"
              value="<%= contact.emailAddress %>"
              required
            />
          </div>
  
          <button class="btn btn-primary" type="submit">
            <i class="fas fa-edit"></i> Submit
          </button>
  
          <a href="/contact-list" class="btn btn-warning"
            ><i class="fas fa-undo"></i> Cancel</a
          >
        </form>
      </div>
    </div>
  </div>